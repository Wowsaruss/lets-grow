{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "shared/types/*": ["../src/shared/types/*"]
    }
  },
  "include": ["src/**/*", "../src/shared/types/**/*"],
  "exclude": ["node_modules"]
} 